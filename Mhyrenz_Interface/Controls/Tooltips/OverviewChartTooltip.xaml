<UserControl x:Class="Mhyrenz_Interface.Controls.Tooltips.OverviewChartTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls.Tooltips"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Border Background="#FF333333" Padding="10" CornerRadius="6">
        <StackPanel>
            <TextBlock Text="{Binding Points[0].SeriesView.Title}" 
                       Foreground="White" FontWeight="Bold" />
            <TextBlock Text="{Binding Points[0].ChartPoint.Y}" 
                       Foreground="White" />
        </StackPanel>
    </Border>
</UserControl>
