<UserControl x:Class="Mhyrenz_Interface.Controls.InventoryDataGrid"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:Mhyrenz_Interface.Controls.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="NumericEdit">
            <!-- MahApps NumericUpDown inside editing template -->
            <mah:NumericUpDown Value="{Binding PurchaseDefaultEdit}" 
               Minimum="0" Maximum="100" 
               NumericInputMode="Numbers" TextAlignment="Center"
               VerticalAlignment="Center" ButtonsAlignment="Opposite"/>
        </DataTemplate>
        <DataTemplate x:Key="NormalEdit">
            <mah:NumericUpDown Value="{Binding PurchaseNormalEdit}" 
               Minimum="0" Maximum="100" HideUpDownButtons="True"
               NumericInputMode="Numbers" TextAlignment="Center"
               VerticalAlignment="Center" ButtonsAlignment="Opposite"/>
        </DataTemplate>

    </UserControl.Resources>
    <Grid>
        <DataGrid Unloaded="OnUserControlUnload" x:Name="InventoryDataGridRef" GridLinesVisibility="All" ItemsSource="{Binding Inventory}" Style="{StaticResource MahApps.Styles.DataGrid.Azure}" AutoGenerateColumns="False" >
            <i:Interaction.Behaviors>
                <behaviors:InventoryDataGridBehavior />
            </i:Interaction.Behaviors>
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Header="Retail" Binding="{Binding RetailPrice}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=LostFocus}" Width="Auto"/>
                <!--<mah:DataGridNumericUpDownColumn Header="Purchase" Binding="{Binding Purchase}" Width="Auto" 
                    Minimum="0" Maximum="100" NumericInputMode="Numbers"/>-->
                <DataGridTemplateColumn x:Name="Purchase" Header="Purchase">
                    
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Purchase}" HorizontalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="ContentTemplate" Value="{StaticResource NumericEdit}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCtrlClicked}" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource NormalEdit}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <!--<DataGridTextColumn Header="Qty" Binding="{Binding Qty, UpdateSourceTrigger=LostFocus}" Width="Auto"/>-->
                <DataGridTextColumn IsReadOnly="True" Header="Net Qty" Binding="{Binding NetQty}" Width="Auto"/>
                <mah:DataGridNumericUpDownColumn Header="Qty" Binding="{Binding Qty}" Width="Auto" 
                    Minimum="0" Maximum="100" NumericInputMode="Numbers"/>
                <DataGridTextColumn IsReadOnly="True" Header="Barcode" Binding="{Binding Barcode}" Width="Auto"/>
                <DataGridTextColumn IsReadOnly="True" Header="Category" Binding="{Binding Item.Category.Name}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
