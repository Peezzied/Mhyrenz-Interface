<UserControl x:Class="Mhyrenz_Interface.Controls.TransactionsDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Transactions}" AutoGenerateColumns="False" Style="{StaticResource MahApps.Styles.DataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Barcode" CanUserSort="False" Binding="{Binding Barcode}" Width="Auto"/>
                <DataGridTemplateColumn IsReadOnly="True" CanUserSort="False" Header="Name" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <local:MaxLinesTextBlock Text="{Binding Name}"
                                     LineHeight="16"
                                     MaxLines="2"
                                     Padding="4"
                                     Width="Auto"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="Price" Binding="{Binding Price}" Width="Auto"/>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="Amount" Binding="{Binding Amount}" Width="Auto"/>
                <DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date}" Width="Auto"/>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
