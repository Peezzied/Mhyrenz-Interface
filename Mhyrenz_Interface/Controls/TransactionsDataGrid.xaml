<UserControl x:Class="Mhyrenz_Interface.Controls.TransactionsDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls"
             xmlns:converters="clr-namespace:Mhyrenz_Interface.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BarcodeToImageConverter x:Key="BarcodeToImageConverter"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid ItemsSource="{Binding Transactions}" AutoGenerateColumns="False" Style="{StaticResource MahApps.Styles.DataGrid}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Barcode" CanUserSort="False" Width="100" MinWidth="100" MaxWidth="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Barcode, Converter={StaticResource BarcodeToImageConverter}}" 
                                   MaxWidth="130"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Barcode}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn IsReadOnly="True" CanUserSort="False" Header="Name" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <local:MaxLinesTextBlock Text="{Binding Name}"
                                     LineHeight="16"
                                     MaxLines="3"
                                     Padding="4"
                                     Width="Auto"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="Price" Binding="{Binding Price}" Width="Auto" MinWidth="70"/>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="Qty" Binding="{Binding Amount}" Width="Auto" MinWidth="50"/>
                <DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date}" Width="Auto" MinWidth="60"/>
                <DataGridTextColumn IsReadOnly="True" CanUserSort="False" Header="" Width="*" CanUserReorder="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
