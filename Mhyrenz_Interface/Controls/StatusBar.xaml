<UserControl x:Class="Mhyrenz_Interface.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StatusBar VerticalAlignment="Bottom"
                   Foreground="White">
        <StatusBar.Background>
            <SolidColorBrush Color="{DynamicResource MahApps.Colors.Accent}"/>
        </StatusBar.Background>
        <StatusBarItem Content="Ready" />
        <StatusBarItem Content="User: JohnDoe" />
        <StatusBarItem Content="Time: 12:34 PM" HorizontalAlignment="Right" />
    </StatusBar>
</UserControl>
