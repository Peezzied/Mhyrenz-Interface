<UserControl x:Class="Mhyrenz_Interface.Controls.OverviewChart"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mhyrenz_Interface.Controls"
             xmlns:tooltips="clr-namespace:Mhyrenz_Interface.Controls.Tooltips"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <tooltips:OverviewChartTooltip x:Key="OverviewChartTooltip"/>
    </UserControl.Resources>
    <Grid>
        <!--<TextBlock Text="{Binding Bindtest}"/>-->
        <lvc:PieChart 
            x:Name="SalesByCategory"
            LegendLocation="Left" 
            DataTooltip="{StaticResource OverviewChartTooltip}"
            Series="{Binding SalesByCategory}" 
            Hoverable="True"/>
    </Grid>
</UserControl>
